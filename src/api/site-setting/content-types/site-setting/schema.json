{
  "kind": "singleType",
  "collectionName": "site_settings",
  "info": {
    "singularName": "site-setting",
    "pluralName": "site-settings",
    "displayName": "Site Setting"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "siteName": {
      "type": "string",
      "required": true
    },
    "siteDescription": {
      "type": "text",
      "required": true
    },
    "heroHeadline": {
      "type": "string",
      "required": true
    },
    "heroSubHeadline": {
      "type": "string",
      "required": false
    },
    "favicon": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "maintenanceMode": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "SEO": {
      "type": "component",
      "component": "shared.seo",
      "repeatable": false
    }
  }
}
